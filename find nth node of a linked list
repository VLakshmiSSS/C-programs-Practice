// Online C compiler to run C program online
#include <stdio.h>
#include <stdlib.h>

typedef struct List_node
{
    int value;
    struct node * next;
}node;

node *head=NULL;



//add a node tolist
void createNode(int a)
{
    if (head==NULL)//to check if head node is present or not
    {
    head=(node*)malloc(sizeof(node));
    head->value=a;
    head->next=NULL;
    }
    else
    {
    node* temp=(node*)malloc(sizeof(node));
    node* ptr;
    temp->value=a;
    temp->next=NULL;
    ptr=head;
    //printf("\np is assigned to head because temp->value=%d",ptr->value);
    while(ptr->next != NULL)
    {
        ptr=ptr->next;
    }
    ptr->next=temp; 
    }
    
}

//find the nth node of list
int findNode(int n)
{
    node *p=head;
    int i;
    for(i=1;i<n;i++)
    {
        p=p->next;
    }
    return (p->value);
}

//main function
int main()
{
    int a=10;
    node *p;
    createNode(20);
    p=head;
    createNode(30);
    createNode(40);
    createNode(50);
    createNode(60);
    while(p !=NULL)
    {
        printf("\n%d->",p->value);
        p=p->next;
    }
    printf("\nnth value is %d",findNode(1));
    
    return(0);
}
