// Online C compiler to run C program online
#include <stdio.h>

int main() {
   int a[8]={56,54,85,45,55,11,25,1};
   int n=8,i,j,gap=n/2;
   while(gap>0)
   {
       for(i=0;i<n;i++)
       {
           int t=gap+i-1;
           while(t<n && (a[i]>a[t]))
           {
               int temp=a[i];
               a[i]=a[t];
               a[t]=temp;
               t=t+gap-1;
           }
       }
    printf("\nThe sorted array is:\n");
    for(j=0;j<n;j++)
    printf("%d\t",a[j]);
       gap=gap/2;
   }


    return 0;
}
